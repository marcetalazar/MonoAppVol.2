@model IEnumerable<VehicleMake.Make>


@{
    ViewData["Title"] = "Index";
    int numOfPages = ViewData["NumOfPages"] != null ? (int)ViewData["NumOfPages"] : 0;
    ViewBag.NumOfPages = Enumerable.Range(1, numOfPages);
}
<h1>Index</h1>
<div class="row">
    <div class="col-md-2">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
    </div>
    <div class="col-md-3">
        <select id="sortOrder" class="form-control" onchange="location.href='@Url.Action("Index")?sortOrder=' + this.value">
            <option value="">Sort by...</option>
            <option value="Id">Id</option>
            <option value="Id_desc">Id_desc</option>
            <option value="Name">Name</option>
            <option value="Name_desc">Name_desc</option>
            <option value="Abrv">Abrv</option>
            <option value="Abrv_desc">Abrv_desc</option>


        </select>
    </div>
    <div class="col-md-2">
        <input type="text" id="searchString" class="form-control" name="searchString" placeholder="Search by manufacturer..." />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("FilterManufacturers")?searchString=' + document.getElementById('searchString').value">Search</button>
    </div>
    <div class="col-md-2">
        <button class="btn btn-danger" onclick="location.href='@Url.Action("Index")'">Show All</button>
    </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abrv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}

</table>
<div class="row">
    <div class="col-md-2">
        <ul class="pagination">
            
            @foreach (var item in ViewBag.NumOfPages)
            {
                <a class="page-link" asp-action="Index" asp-route-page="@item" asp-route-sortOrder="@ViewBag.SortOrder">@item</a>  
            }
            
        </ul>
    </div>
</div>
</tbody>
